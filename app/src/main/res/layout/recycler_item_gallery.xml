<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <ImageView
        android:id="@+id/recycler_imageview_thumbnail"
        android:layout_width="match_parent"
        android:layout_height="@dimen/_100sdp"
        android:background="@color/black"
        android:scaleType="centerCrop"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="ContentDescription" />

    <ImageView
        android:id="@+id/recyclerview_imageview_checked"
        android:layout_width="@dimen/_18ssp"
        android:layout_height="@dimen/_18ssp"
        android:layout_margin="@dimen/_10sdp"
        android:background="@drawable/general_shape_circle_green"
        android:padding="@dimen/_5sdp"
        android:src="@drawable/general_ic_check"
        android:visibility="gone"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintTop_toTopOf="parent" />
</androidx.constraintlayout.widget.ConstraintLayout>