<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:animateLayoutChanges="true"
    android:gravity="center"
    android:orientation="vertical">

    <ImageView
        android:id="@+id/splashscreen_imageview_logo"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:src="@drawable/general_ic_logo"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintLeft_toLeftOf="parent"
        app:layout_constraintRight_toRightOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <id.co.rolllpdf.uikit.UiKitTextview
        android:id="@+id/splashscreen_textview_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_50sdp"
        android:gravity="center"
        android:text="@string/app_name"
        android:visibility="gone"
        app:rolll_text_code="h6_B" />

    <id.co.rolllpdf.uikit.UiKitTextview
        android:id="@+id/splashscreen_textview_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="@dimen/_30sdp"
        android:layout_marginTop="@dimen/_3sdp"
        android:gravity="center"
        android:text="@string/splashscreen_text_desc"
        android:visibility="gone"
        app:rolll_text_code="p_a_r" />
</LinearLayout>